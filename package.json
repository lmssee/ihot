{
  "name": "lmhot",
  "version": "0.0.21",
  "description": "a simple hot restart",
  "type": "module",
  "main": "out/index.cjs",
  "module": "out/index.mjs",
  "typings": "types/index.d.ts",
  "scripts": {
    "build": "npm run clear && npm run onlyBuild",
    "onlyBuild": "rollup --config rollup.config.js && tsc -p tsconfig.types.json",
    "clear": "npx lmcmd  r out types",
    "clean": "npx lmcmd u -d && npx lmcmd r node_modules  package-lock.json && npm install && npm run build ",
    "dev": "npm run build && node  ./bin/lmhot.js",
    "up": "npx lmcmd u -n"
  },
  "files": [
    "bin",
    "out",
    "types"
  ],
  "engines": {
    "node": "^18.0.0 ||  >=20.0.0"
  },
  "author": "lmssee <lmssee@outlook.com>  (https://lmssee.com)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lmssee/lmhot.git"
  },
  "keywords": [
    "lmssee",
    "lmssee-simple-hot",
    "lmhot"
  ],
  "homepage": "https://lmssee.github.io/lmhot",
  "bugs": {
    "url": "https://github.com/lmssee/lmhot/issues",
    "email": "lmssee@outlook.com"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@lmssee/node-tools": "^0.0.17",
    "@lmssee/tools": "^0.0.14",
    "lmcmd": "^0.0.36",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.13.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "typescript": "^5.4.5"
  },
  "bin": {
    "lmhot": "./bin/lmhot.js"
  }
}